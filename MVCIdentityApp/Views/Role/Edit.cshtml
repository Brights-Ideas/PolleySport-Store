@using MVCIdentityApp.Models
@using MVCIdentityApp.ViewModels
@model EditRole

<div class="text-danger" asp-validation-summary="All"></div>

<div id="page-wrapper">
	<div class="container-fluid">

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">
					Admin
					<small>edit role details</small>
		
				</h1>
			</div>
		</div>


		@using (Html.BeginForm("Edit", "Role", FormMethod.Post))
		{
			<input name="_method" type="hidden" value="PUT"><input name="_token" type="hidden" value="o6y8JXVks2I2HiuNde8vHLI8omJkdKVWaqDMmY4z">
			<input type="hidden" name="RoleId" value="@Model.Role.Id" />
			<input type="hidden" name="RoleName" value="@Model.Role.Name" />

			<div class="row">
				<div class="col-lg-6 col-md-12 col-sm-12">
					<div class="panel panel-default">
						<div class="panel-heading">Add to @Model.Role.Name</div>
						<div class="panel-body">
							@if (!Model.NonMembers.Any())
							{
								<tr>
									<td colspan="2">All Users Are @Model.Role.Name</td>
								</tr>
							}
							else
							{
								foreach (ApplicationUser user in Model.NonMembers)
								{
									<div class="form-group">
										<label for="IdsToAdd" class="col-sm-10 control-label">@user.UserName</label>
										<div class="col-sm-2">
											<label>
												<input type="checkbox" name="IdsToAdd" value="@user.Id" />
											</label>
										</div>
									</div>
								}
							}

						</div>
					</div>
				</div>

				<div class="col-lg-6 col-md-12 col-sm-12">
					<div class="panel panel-default">
						<div class="panel-heading">Remove from @Model.Role.Name</div>
						<table class="table table-condensed table-bordered table-striped">
							@if (!Model.Members.Any())
							{
								<tr>
									<td colspan="2">
										No Users are @Model.Role.Name
									</td>
								</tr>
							}
							else
							{
								foreach (ApplicationUser user in Model.Members)
								{
									<tr>
										<td>@user.UserName</td>
										<td>
											<input type="checkbox" name="IdsToRemove" value="@user.Id" />
										</td>
									</tr>
								}
							}
						</table>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-2">
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block">
							<i class="glyphicon glyphicon-floppy-save"></i>
							Update Role
						</button>
					</div>
				</div>
			</div>
		}
	</div>
</div>


