@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>


<div id="page-wrapper">
	<div class="container-fluid">

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">
					Roles <small>available system roles</small>
				</h1>
			</div>
		</div>


		<div class="row tab-search">
			<div class="col-md-2">
				<a href="@Url.Action("Create", "Role")" class="btn btn-success">
					<i class="glyphicon glyphicon-plus" aria-hidden="true"></i>
					Add Role
				</a>
			</div>
		</div>


		<div class="table-responsive" id="users-table-wrapper">
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Display Name</th>
						<th># of users with this role</th>
						<th class="text-center">Action</th>
					</tr>
				</thead>
				<tbody>

				@if (!Model.Any())
				{
					<tr>
						<td colspan="4" class="text-center">
							No roles
						</td>
					</tr>
				}
				else
				{
					foreach (var role in Model)
					{

					<tr>
						<td>Admin</td>
						<td>@role.Name</td>
						<td>@role.Users.Count</td>
						<td class="text-center">
							<a href="@Url.Action("Edit", "Role", new { id = role.Id }, null)" class="btn btn-primary btn-circle" data-toggle="tooltip" data-placement="top" data-original-title="Edit Role">
								<i class="glyphicon glyphicon-edit"></i>
							</a>
							<a href="https://demo.vanguardapp.io/role/10/delete" class="btn btn-danger btn-circle" title="" data-toggle="tooltip" data-placement="top" data-method="DELETE" data-confirm-title="Please Confirm" data-confirm-text="Are you sure that you want to delete this role?" data-confirm-delete="Yes, delete it!" data-original-title="Delete Role">
								<i class="glyphicon glyphicon-trash"></i>
							</a>
						</td>
					</tr>
					}
				}
				</tbody>
			</table>
		</div>

	</div>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<a class="btn btn-primary" asp-controller="Home" asp-action="Index">
    Home
</a>
