@model List<Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <h2>@product.Name</h2>
            <img alt="@product.Name" src="@("/Content/" + product.ImageURL)"/>
            <p>
                @product.Description
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
            @Html.ActionLink(product.Name,
                "Details", new { id = product.ProductId })
        </div>
    }
</div>